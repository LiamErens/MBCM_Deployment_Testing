        position:relative;
        width:100%;
        height:auto;
        padding:inherit;
        
    }
    .profile-con {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        box-shadow: 0 4px 4px rgba(0, 0, 0, 0.1), 2px 0 2px rgba(0, 0, 0, 0.1), -2px 0 2px rgba(0, 0, 0, 0.05);
        margin: auto;
        position: relative;
        margin-left:25%;
    }


    .details-con {
        margin-top: 10px;
