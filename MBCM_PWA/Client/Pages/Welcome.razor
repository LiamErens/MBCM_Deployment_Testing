@layout WelcomeLayout
@page "/"

<PageTitle>Welcome</PageTitle>
<div class="text-center">
    <h1>Which one are you?</h1>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Guest</h5>
